{
  "manifest_version": 3,
  "name": "Re-Exam",
  "version": "4.0",
  "description": "Permanently hide feedback header; toggle faculty answers and radio buttons.",

  "permissions": [
    "scripting",
    "activeTab"
  ],

  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },

  "action": {
    "default_title": "Re-Exam",
    "default_icon": {
      "16": "logo16.png",
      "48": "logo48.png",
      "128": "logo128.png"
    }
  },

  "background": {
    "service_worker": "background.js"
  }
}
